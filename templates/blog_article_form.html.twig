{% block body %}

<h1>Crear art√≠culo</h1>
{{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="bg-primary">
                {{ form_label(form.title) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_help(form.title) }}
